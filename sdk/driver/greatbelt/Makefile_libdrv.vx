
include $(MK_DIR)/sys_vx.mk

OBJ_DIR=$(OBJ_BASE_DIR)/driver

LIB = drv
OBJS = $(wildcard $(OBJ_DIR)/common/src/*.o) $(wildcard $(OBJ_DIR)/greatbelt/src/*.o)
DEPS = $(wildcard $(OBJ_DIR)/common/src/*.d) $(wildcard $(OBJ_DIR)/greatbelt/src/*.d)

$(LIB_DIR)/lib$(LIB).a: $(OBJS)
	$(shell mkdir -p $(dir $@))
	echo "LIB => $(subst $(BLD_DIR),build.$(CPU).$(VER),$@)" && \
	rm -rf $@ && \
	$(AR) cru $@ $^ && \
	$(RANLIB) $@

.PHONY: clean
clean:
	rm -rf $(LIB_DIR)/lib$(LIB).a


